	<artifactId>SimpleFlowMeterV4</artifactId>
	<version>0.0.4-SNAPSHOT</version>
	<name>SimpleFlowMeterV4</name>

	<dependencies>
		<dependency>  
		    <groupId>org.apache.logging.log4j</groupId>  
		    <artifactId>log4j-core</artifactId>  
